<% include includes/header %>

	<section class="seriesInfo">
		<div class="seriesSm" style="background-image: url(' <%= series.thumbnail %> ')">
		</div>
		<h1 class="seriesName">
			<%= series.name %>
		</h1>
		<a href="/character/<%= character %>" class="backButton">Back to Series Select</a>
		<span class="border"></span>
	</section>
	<section class="comicCont">
		<% for(var i = 0; i < comics.length; i++) { %>
			<div class="comicWrapper">
				<a target="_blank" href="<%= comics[i].detail %>">
					<div class="comic" style="background-image: url('<%= comics[i].thumbnail %>')">
						<span class="comicName"> 
							<%= comics[i].name %>
						</span>
						<span class="comicRedirect">Redirect to Marvel?</span>
					</div>
				</a>
				<% if(user && read.indexOf(comics[i].comicID) > -1) {%>
						<a href="/read/<%= comics[i].comicID %>" class="readButton read">Read</a>
				<% } else if(user) {%>
						<a href="/read/<%= comics[i].comicID %>" class="readButton">Read</a>
				<% } %>
			</div>
		<% } %>
	</section>

<% include includes/footer %>